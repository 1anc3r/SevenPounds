<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.lancer.sevenpounds">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".ui.application.mApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.SettingActivity" />
        <activity android:name=".mvp.news.activity.NewsDetailActivity" />
        <activity
            android:name=".mvp.photo.activity.PhotoDetailActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".mvp.book.activity.BookDetailActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".mvp.book.activity.BookSearchActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".mvp.music.activity.MusicDetailActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".mvp.music.activity.MusicSearchActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".mvp.movie.activity.MovieDetailActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".mvp.movie.activity.MovieSearchActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".mvp.game.activity.GameDetailActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".mvp.code.activity.CodeDetailActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".mvp.video.activity.VideoPlayerActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name=".ui.activity.AboutActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.Overlay" />
        <activity
            android:name=".mvp.chapter.activity.ChapterActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.Overlay" />
        <activity
            android:name=".mvp.comic.activity.SortActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.Overlay" />
        <activity
            android:name=".mvp.page.activity.PagerActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar.Overlay" />
        <activity
            android:name=".mvp.comic.activity.ComicSearchActivity"
            android:launchMode="singleTask" />
    </application>

</manifest>